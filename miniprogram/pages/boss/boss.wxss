@import "../index/index.wxss";
.header{
    position: relative;
    height: 250rpx;
    line-height: 100rpx;
    padding:30rpx 30rpx 30rpx 150rpx;
    box-sizing: border-box;
    background: rgba(242, 242, 242, 0.7);
    font-size: 28rpx;
    color: #fff;
    margin-left: 50rpx;
    margin-right: 50rpx;
    margin-top: 50rpx;
    border-radius: 10px;
}
.header .thumb{
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.order-login{
  float: right;
}



.userinfo {
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 328rpx;
}

.userinfo-avatar {
  margin-top: 20px;
  border-radius: 250rpx;
  right: 10px;
  width: 200rpx;
  height: 200rpx;
  padding-left:2rpx;
  padding-bottom: 0;
}

.userinfo-nickname {
  margin-top: 20rpx;
  margin-left: 80rpx;
  background: transparent;
}

.name-text{
  color: black;
  font-size: 40rpx;
  background: transparent;
  height: 40rpx;
}

.name-userID{
  color: #ea6e0c;
  margin-top: 10rpx;
  font-size: 30rpx;
  background: transparent;
}

.usermotto {
  margin-top: 30px;
}

.graySpace{
  padding-left: 40rpx;
  background: transparent;
  font-size: 12px;
  min-height: 30rpx;
}

.item-avatar-lg,.item-avatar-md,.item-avatar-sm,.item-avatar-xs{
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 3rpx solid gray;
  cursor: pointer;
  position:relative;
}

.item-avatar-xs image{
  float: left;
  width: 65rpx;
  height: 65rpx;
  box-sizing: border-box
}

.item-avatar-lg .item-text,.item-avatar-md .item-text,.item-avatar-sm .item-text,.item-avatar-xs .item-text{
  padding-left: 10px;
}



.title{
  font-family: "微软雅黑";
  font-size: 30rpx;
  
}

.wrap-b{
  background-color: transparent;
  width: 100%;
  min-height: 100%;
}


.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  border-radius: 50%;  
  position: absolute;
  left: 30rpx;
  top: 15rpx;
  width: 150rpx;
  height: 150rpx;
}  

.bar-list{
  background: rgba(242, 242, 242, 0.7);
  margin-left: 50rpx;
  margin-right: 50rpx;
  border-radius: 10px;
  height: 100%;
}

.scroll-view{
  height: 100%;
}

.cuIcon-roundright{
  color: black;
  font-size: 50rpx;
  font-weight: 100;
}